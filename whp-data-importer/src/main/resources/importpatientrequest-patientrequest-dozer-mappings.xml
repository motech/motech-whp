<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping wildcard="true">
        <class-a>org.motechproject.whp.importer.csv.request.ImportPatientRequest</class-a>
        <class-b>org.motechproject.whp.patient.contract.PatientRequest</class-b>
        <field custom-converter="org.motechproject.whp.common.mapping.StringToDateTime">
            <a>date_modified</a>
            <b>date_modified</b>
        </field>
        <field custom-converter="org.motechproject.whp.common.mapping.StringToDateTime">
            <a>date_modified</a>
            <b>treatmentCreationDate</b>
        </field>

        <field custom-converter-id="stringToTreatmentCategory">
            <a>treatment_category</a>
            <b>treatment_category</b>
        </field>
        <field custom-converter="org.motechproject.whp.common.mapping.StringToEnumeration">
            <a>disease_class</a>
            <b>disease_class</b>
        </field>
        <field custom-converter="org.motechproject.whp.common.mapping.StringToEnumeration">
            <a>gender</a>
            <b>gender</b>
        </field>
        <field custom-converter="org.motechproject.whp.common.mapping.StringToEnumeration">
            <a>patient_type</a>
            <b>patient_type</b>
        </field>
        <!--Nested Address Fields-->
        <field>
            <a>address_location</a>
            <b>address.address_location</b>
        </field>
        <field>
            <a>address_block</a>
            <b>address.address_block</b>
        </field>
        <field>
            <a>address_village</a>
            <b>address.address_village</b>
        </field>
        <field>
            <a>address_landmark</a>
            <b>address.address_landmark</b>
        </field>
        <field>
            <a>address_district</a>
            <b>address.address_district</b>
        </field>
        <field>
            <a>address_state</a>
            <b>address.address_state</b>
        </field>
        <field>
            <a>migrated</a>
            <b>migrated</b>
        </field>
        <field>
            <a>age</a>
            <b>age</b>
        </field>
    </mapping>

</mappings>